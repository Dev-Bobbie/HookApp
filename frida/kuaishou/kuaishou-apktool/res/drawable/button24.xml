<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke android:width="@dimen/button_stroke_width" android:color="@color/p_color_light_pressed" />
            <corners android:radius="@dimen/button_radius1" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke android:width="@dimen/button_stroke_width" android:color="@color/p_color_light" />
            <corners android:radius="@dimen/button_radius1" />
        </shape>
    </item>
</selector>