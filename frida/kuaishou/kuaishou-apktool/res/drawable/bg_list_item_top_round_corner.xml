<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/surface_color1_pressed" />
            <corners android:topLeftRadius="@dimen/dimen_10dp" android:topRightRadius="@dimen/dimen_10dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/surface_color1_pressed" />
            <corners android:topLeftRadius="@dimen/dimen_10dp" android:topRightRadius="@dimen/dimen_10dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/surface_color1_normal" />
            <corners android:topLeftRadius="@dimen/dimen_10dp" android:topRightRadius="@dimen/dimen_10dp" />
        </shape>
    </item>
</selector>