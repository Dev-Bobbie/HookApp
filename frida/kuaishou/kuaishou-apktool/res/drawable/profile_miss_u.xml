<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <layer-list
          xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/p_color_orange" />
                    <padding android:left="8.0dip" android:top="8.0dip" android:right="8.0dip" android:bottom="8.0dip" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center" android:src="@drawable/profile_icon_press_s_big" android:tileMode="disabled" />
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false">
        <layer-list
          xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/profile_miss_u_bg_color" />
                    <padding android:left="8.0dip" android:top="8.0dip" android:right="8.0dip" android:bottom="8.0dip" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center" android:src="@drawable/profile_icon_press_s" android:tileMode="disabled" />
            </item>
        </layer-list>
    </item>
</selector>