<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:top="0.5dip" android:bottom="-0.5dip">
                <shape android:shape="rectangle">
                    <solid android:color="@color/surface_color1_pressed" />
                    <stroke android:width="0.5dip" android:color="@color/divider_color_grey" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:top="0.5dip" android:bottom="-0.5dip">
                <shape android:shape="rectangle">
                    <solid android:color="@color/surface_color1_normal" />
                    <stroke android:width="0.5dip" android:color="@color/divider_color_grey" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>