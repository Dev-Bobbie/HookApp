<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:drawable="@drawable/popup_big_corner_shadow" />
            <item>
                <shape>
                    <solid android:color="@color/p_color_yellow_alpha50" />
                    <corners android:radius="50.0dip" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:drawable="@drawable/popup_big_corner_shadow" />
            <item>
                <shape>
                    <solid android:color="@color/p_color_yellow" />
                    <corners android:radius="50.0dip" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>